/**
 * Fetches any CiviCRM entity values to be used for multi-select inputs
 *
 * @return array
 */
function _compucorp_commerce_civicrm_get_civicrm_entity_values($entity, $labelKey, $inputType = 'select') {
  $entityValues = civicrm_api3($entity, 'get', array(
    'sequential' => 1,
    'is_active' => 1,
    'options' => array('limit' => 0),
  ));

  $optionsList = array();
  if ($inputType == 'select') {
    $optionsList = array(0 => t('Select an option ...'));
  }


  if (!empty($entityValues['values'])) {
    foreach ($entityValues['values'] as $row) {
      $optionsList[$row['id']] =$row[$labelKey];
    }
  }

  return $optionsList;
}


/**
 * Called when the user checkout an order
 *
 * @param $order
 */
function compucorp_commerce_civicrm_action_checkout_complete($order) {
  if (!civicrm_initialize()) {
    return;
  }

  // Find or create a CiviCRM contact ID for the customer.
  $cid = _compucorp_commerce_civicrm_get_cid($order);
  if ($cid === FALSE) {
    return;
  }

  $cid = _compucorp_commerce_civicrm_add_update_contact($cid, $order);
  if ($cid === FALSE) {
    return;
  }

  // Add the contribution record.
  _compucorp_commerce_civicrm_add_contribution($cid, $order);

  // Add this contact to selected groups.
  _compucorp_commerce_civicrm_add_to_groups($cid);
}

